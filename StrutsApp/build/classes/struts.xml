<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <package name="cn.pluto.www" namespace="/" extends="struts-default">
    	<action name="loginUser" class="cn.pluto.www.user.action.UserAction">
    		<result name="success">/pages/success.jsp</result>
    		<result name="fail">/pages/fail.jsp</result>
    	</action>
    	
    	<action name="login" class="cn.pluto.www.user.action.UserAction" method="login">
    		<result name="success">/pages/success.jsp</result>
    		<result name="fail">/pages/fail.jsp</result>
    	</action>
    	
    	<action name="register" class="cn.pluto.www.user.action.UserAction" method="register">
    		<result name="success">/pages/success.jsp</result>
    		<result name="fail">/pages/fail.jsp</result>
    	</action>
    </package>


    <!-- Add packages here -->

</struts>
