<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE struts PUBLIC  
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"  
    "http://struts.apache.org/dtds/struts-2.0.dtd">  
  
<struts>  
    <package name="mystruts" extends="struts-default">  
        <action name="userAction" class="com.mystruts.action.UserAction" method="login">
        	<result name="success">/login_success.jsp</result>
        	<result name="error">/login_fail.jsp</result>
        </action>
        <action name="register" class="com.mystruts.action.RegisterAction" method="register">
        	<result name="success">/register_success.jsp</result>
        	<result name="error">/register_fail.jsp</result>
        </action>
    </package>  
</struts>  