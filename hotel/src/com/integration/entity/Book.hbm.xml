<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.integration.entity.Book" table="room">
		<id name="bookid" column="bookid" type="int">
			<generator class="identity"> <!-- 主键id的生成方式为自增 -->
			</generator>
		</id>
		<property name="name" column="name" type="string"></property>
		<property name="author" column="author" type="string"></property>
		<property name="briefIntroduction" column="briefintroduction" type="string"></property>
		<property name="status" column="status" type="int"></property>
	</class>
</hibernate-mapping>