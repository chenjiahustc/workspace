<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.integration.entity.Order" table="h_order">
		<id name="recorderid" column="recorderid" type="int">
			<generator class="identity"> <!-- 主键id的生成方式为自增 -->
			</generator>
		</id>
		<property name="readerid" column="readerid" type="int"></property>
		<property name="bookid" column="bookid" type="int"></property>
	</class>
</hibernate-mapping>